{
  "theme": {
    "input": {
      "background": {
        "#normal": "@color-black-alpha-100",
        "#hovered": "@color-white-alpha-05",
        "#pressed": "@color-white-alpha-11",
        "#active": "@color-white-alpha-11",
        "#disabled": "@color-white-alpha-11"
      },
      "border-color": {
        "#normal": "@color-white-alpha-50",
        "#active": "@color-white-alpha-90"
      },
      "text-color": {
        "#normal": "@color-white-alpha-95",
        "#disabled": "@color-white-alpha-40"
      },
      "focusRing": "@color-blue-40",
      "error": {
        "background": "@color-red-90",
        "border-color": "@color-red-50",
        "text-color": "@color-red-40"
      },
      "warning": {
        "background": "@color-yellow-90",
        "border-color": "@color-yellow-40",
        "text-color": "@color-yellow-40"
      }
    }
  }
}

      
