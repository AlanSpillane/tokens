{
  "avatar": {
    "presence-icon": {
      "active": "@theme-presence-active",
      "meeting": "@theme-presence-busy",
      "schedule": "@theme-presence-busy",
      "dnd": "@theme-presence-doNotDisturb",
      "presenting": "@theme-presence-doNotDisturb",
      "quiet-hours": "@theme-presence-away",
      "away": "@theme-presence-away",
      "ooo": "@theme-presence-away"
    },
    "color-avatar": {
      "text": "@theme-text-primary",
      "background": {
        "default": "@theme-avatar-default",
        "gold": "@theme-avatar-gold",
        "orange": "@theme-avatar-orange",
        "lime": "@theme-avatar-lime",
        "mint": "@theme-avatar-mint",
        "cyan": "@theme-avatar-cyan",
        "cobalt": "@theme-avatar-cobalt",
        "slate": "@theme-avatar-slate",
        "violet": "@theme-avatar-violet",
        "purple": "@theme-avatar-purple",
        "pink": "@theme-avatar-pink"
      }
    },
    "personas": {
      "speaker": {
        "static": {
          "inner-ring": "@theme-outline-gradient-active"
